{
"compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist/server",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
        "webpack-env"
    ],
    "paths": {
    "@/*": [
        "server/*"
    ]
    },
    "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
    ]
},
"files": ["./src/server/main.ts"],
"include": [
    "./src/server/**/*.ts"
],
"exclude": ["node_modules", "dist"]
}